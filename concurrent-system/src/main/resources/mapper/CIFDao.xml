<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beanpodtech.pkms.dbadapter.dao.ICIFDao">

    <!-- CIF_SHARE_SECRET 操作 -->
    <insert id="insertCifShareSecret" parameterType="CifShareSecret">
        INSERT INTO CIF_SHARE_SECRET(TRANSACTION_ID,SHARE_SECRET,OPER_TIME)
        VALUES (#{transactionId},#{shareSecret}, CURRENT_TIMESTAMP )
    </insert>

    <delete id="deleteCifShareSecret" parameterType="string">
        DELETE FROM CIF_SHARE_SECRET WHERE TRANSACTION_ID = #{transactionId}
    </delete>

    <select id="selectShareSecret" parameterType="string" resultType="string">
        SELECT SHARE_SECRET
        FROM CIF_SHARE_SECRET
        WHERE TRANSACTION_ID = #{transactionId}
    </select>
</mapper>