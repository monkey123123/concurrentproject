<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beanpodtech.pkms.dbadapter.dao.ISdInfoDao">

    <!--add by Allen -->
    <resultMap id="ResultMap_SdInfo" type="com.beanpodtech.pkms.common.model.tam.SdInfo" >
        <id column="SD_ID" property="sdId" jdbcType="INTEGER" />
        <result column="SD_NAME" property="sdName" jdbcType="VARCHAR" />
        <result column="DESCRIPTION" property="description" jdbcType="VARCHAR" />
        <result column="DELETE_FLAG" property="deleteFlag" jdbcType="INTEGER" />
        <result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP" />
        <result column="OPER_ID" property="operId" jdbcType="VARCHAR" />
        <result column="OPER_TIME" property="operTime" jdbcType="TIMESTAMP" />
    </resultMap>


    <sql id="sql_select">
        SD_ID,
        SD_NAME,
        DESCRIPTION,
        DELETE_FLAG,
        CREATE_TIME,
        OPER_ID,
        OPER_TIME
    </sql>
    <sql id="sql_insert">
        SD_NAME,
        DESCRIPTION,
        DELETE_FLAG,
        CREATE_TIME,
        OPER_ID,
        OPER_TIME
    </sql>


    <!-- 单表 操作 useGeneratedKeys="true"会将自动生成的主键赋值给parameterType="SdInfo"的实体对象 -->
    <insert id="insertSdInfo" parameterType="SdInfo" useGeneratedKeys="true" keyProperty="sdId">
        INSERT INTO sd_info(<include refid="sql_insert"/> )
        VALUES (#{sdName},#{description},#{deleteFlag},CURRENT_TIMESTAMP,#{operId},CURRENT_TIMESTAMP )
    </insert>

    <!--not in use-->
    <update id="updateSdInfo" parameterType="SdInfo">
        UPDATE sd_info
        SET
            <if test="sdName != null">SD_NAME = #{sdName},</if>
            <if test="description != null">DESCRIPTION = #{description},</if>
            <if test="operId != null">OPER_ID = #{operId},</if>
            OPER_TIME = CURRENT_TIMESTAMP
        WHERE SD_ID = #{sdId}
    </update>

    <!--in use-->
    <update id="updateByMap" parameterType="java.util.HashMap">
        UPDATE sd_info
        SET
            <if test="sdName != null">SD_NAME = #{sdName},</if>
            <if test="description != null">DESCRIPTION = #{description},</if>
            <if test="operId != null">OPER_ID = #{operId},</if>
            OPER_TIME = CURRENT_TIMESTAMP
        WHERE SD_ID = #{sdId}
    </update>
    <!--批量逻辑删除-->
    <update id="deleteLogic" parameterType="java.util.HashMap">
        UPDATE sd_info
        SET
        <if test="deleteFlag != null">DELETE_FLAG = #{deleteFlag},</if>
        <if test="operId != null">OPER_ID = #{operId},</if>
        OPER_TIME = CURRENT_TIMESTAMP
        WHERE SD_ID IN
        <foreach collection="idList" item="itemId" index="index"
                 open="(" close=")" separator=",">
            #{itemId}
        </foreach>
    </update>
    <select id="selectById" parameterType="SdInfo" resultMap="ResultMap_SdInfo">
        SELECT <include refid="sql_select"/>
        FROM sd_info
        where
            SD_ID = #{sdId}
            AND DELETE_FLAG = #{deleteFlag}
    </select>

    <select id="selectByMap" parameterType="java.util.HashMap" resultMap="ResultMap_SdInfo">
        SELECT <include refid="sql_select"/>
        FROM sd_info
        <where>
            <if test="sdId != null">
                AND SD_ID = #{sdId}
            </if>
            <if test="sdName != null">
                AND SD_NAME = #{sdName}
            </if>
            <if test="deleteFlag != null">
                AND DELETE_FLAG = #{deleteFlag}
            </if>
            <if test="operId != null">
                AND OPER_ID = #{operId}
            </if>
            <if test="startTime != null">
                AND CREATE_TIME &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                AND CREATE_TIME &lt;= #{endTime}
            </if>
            <if test="start != null">
                order by SD_ID desc
                limit #{start},#{limit}
            </if>
        </where>
    </select>
    <select id="selectCountByMap" parameterType="java.util.HashMap" resultType="integer">
        SELECT count(SD_ID)
        FROM sd_info
        <where>
            <if test="sdId != null">
                AND SD_ID = #{sdId}
            </if>
            <if test="sdName != null">
                AND SD_NAME = #{sdName}
            </if>
            <if test="deleteFlag != null">
                AND DELETE_FLAG = #{deleteFlag}
            </if>
            <if test="operId != null">
                AND OPER_ID = #{operId}
            </if>
            <if test="startTime != null">
                AND CREATE_TIME &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                AND CREATE_TIME &lt;= #{endTime}
            </if>
        </where>
    </select>

</mapper>