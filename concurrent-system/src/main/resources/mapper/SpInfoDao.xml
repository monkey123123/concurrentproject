<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beanpodtech.pkms.dbadapter.dao.ISpInfoDao">

    <!--add by Allen -->
    <resultMap id="ResultMap_SpInfo" type="com.beanpodtech.pkms.common.model.tam.SpInfo" >
        <id column="SP_ID" property="spId" jdbcType="INTEGER" />
        <result column="SP_NAME" property="spName" jdbcType="VARCHAR" />
        <result column="DESCRIPTION" property="description" jdbcType="VARCHAR" />
        <result column="DELETE_FLAG" property="deleteFlag" jdbcType="INTEGER" />
        <result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP" />
        <result column="OPER_ID" property="operId" jdbcType="VARCHAR" />
        <result column="OPER_TIME" property="operTime" jdbcType="TIMESTAMP" />
    </resultMap>


    <sql id="sql_select">
        SP_ID,
        SP_NAME,
        DESCRIPTION,
        DELETE_FLAG,
        CREATE_TIME,
        OPER_ID,
        OPER_TIME
    </sql>
    <sql id="sql_insert">
        SP_NAME,
        DESCRIPTION,
        DELETE_FLAG,
        CREATE_TIME,
        OPER_ID,
        OPER_TIME
    </sql>


    <!-- 单表 操作 useGeneratedKeys="true"会将自动生成的主键赋值给parameterType="SpInfo"的实体对象 -->
    <insert id="insertSpInfo" parameterType="SpInfo" useGeneratedKeys="true" keyProperty="spId">
        INSERT INTO sp_info(<include refid="sql_insert"/> )
        VALUES (#{spName},#{description},#{deleteFlag},CURRENT_TIMESTAMP,#{operId},CURRENT_TIMESTAMP )
    </insert>
<!--not in use-->
    <update id="updateSpInfo" parameterType="SpInfo">
        UPDATE sp_info
        SET
            <if test="spName != null">SP_NAME = #{spName},</if>
            <if test="description != null">DESCRIPTION = #{description},</if>
            <if test="operId != null">OPER_ID = #{operId},</if>
            OPER_TIME = CURRENT_TIMESTAMP
        WHERE SP_ID = #{spId}
    </update>
    <!--批量逻辑删除-->
    <update id="deleteLogic" parameterType="java.util.HashMap">
        UPDATE sp_info
        SET
            <if test="deleteFlag != null">DELETE_FLAG = #{deleteFlag},</if>
            <if test="operId != null">OPER_ID = #{operId},</if>
            OPER_TIME = CURRENT_TIMESTAMP
        WHERE SP_ID IN
        <foreach collection="idList" item="itemId" index="index"
                 open="(" close=")" separator=",">
            #{itemId}
        </foreach>
    </update>
<!--in use-->
    <update id="updateByMap" parameterType="java.util.HashMap">
        UPDATE sp_info
        SET
            <if test="spName != null">SP_NAME = #{spName},</if>
            <if test="description != null">DESCRIPTION = #{description},</if>
            <if test="operId != null">OPER_ID = #{operId},</if>
            OPER_TIME = CURRENT_TIMESTAMP
        WHERE SP_ID = #{spId}
    </update>

    <select id="selectById" parameterType="SpInfo" resultMap="ResultMap_SpInfo">
        SELECT <include refid="sql_select"/>
        FROM sp_info
        <where>
            SP_ID = #{spId}
            AND DELETE_FLAG = #{deleteFlag}
        </where>
    </select>

    <select id="selectByMap" parameterType="java.util.HashMap" resultMap="ResultMap_SpInfo">
        SELECT <include refid="sql_select"/>
        FROM sp_info
        <where>
            <if test="spId != null">
                AND SP_ID = #{spId}
            </if>
            <if test="spName != null">
                AND SP_NAME = #{spName}
            </if>

            <if test="deleteFlag != null">
                AND DELETE_FLAG = #{deleteFlag}
            </if>
            <if test="operId != null">
                AND OPER_ID &lt;= #{operId}
            </if>
            <if test="startTime != null">
                AND CREATE_TIME &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                AND CREATE_TIME &lt;= #{endTime}
            </if>
            <if test="start != null">
                order by SP_ID desc
                limit #{start},#{limit}
            </if>
        </where>
    </select>
    <select id="selectCountByMap" parameterType="java.util.HashMap" resultType="integer">
        SELECT count(SP_ID)
        FROM sp_info
        <where>
            <if test="spId != null">
                AND SP_ID = #{spId}
            </if>
            <if test="spName != null">
                AND SP_NAME = #{spName}
            </if>

            <if test="deleteFlag != null">
                AND DELETE_FLAG = #{deleteFlag}
            </if>
            <if test="operId != null">
                AND OPER_ID &lt;= #{operId}
            </if>
            <if test="startTime != null">
                AND CREATE_TIME &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                AND CREATE_TIME &lt;= #{endTime}
            </if>
        </where>
    </select>


</mapper>